
@{
    ViewBag.Title = "Index";
}

<h2>Store View</h2>

<a id="backbutton" class="btn btn-default" href="https://localhost:44378/Home/Index" role="button"><img src="~/Images/backbutton2.png" height="50" width="50"></a>

<h2 style="color:orangered">Store View</h2>
<div>
    <div class="jumbotron" style="background-color:navy">
        <img src="https://1000logos.net/wp-content/uploads/2020/09/Hobby-Lobby.png" class="mx-auto d-block" style="width:50%" />
        <br />
        <p class="lead" style="color: white">On this page, you will be able to see all stores. Please choose a store to create a request form, delete a store, or create a new store</p>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th style="color:orangered">
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th style="color:orangered">
            @Html.DisplayNameFor(model => model.StreetAddress)
        </th>
        <th style="color:orangered">
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th style="color:orangered">
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.ActionLink("Create A Request Form", "Index", "Requests") |
                @Html.ActionLink("Delete", "Delete", new { id = item.StoreNumber })
            </td>
        </tr>
    }

</table>

